<html xmlns="http://www.w3.org/1999/xhtml" lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="XHRT">
    <link rel="icon" href="/favicon.ico">

    <title>SF Logistics CRM system</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Content/CommonCss/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/CommonCss/bootstrap/css/bootstrap-responsive.css" rel="stylesheet">
    <!-- Custom css -->
    <link href="~/Content/CommonCss/css/shared.css" rel="stylesheet">
    <link href="~/Content/CommonCss/css/comb.css" rel="stylesheet">
    <link href="~/Content/CommonCss/css/base.css" rel="stylesheet">
    <!--cite javascript-->
    <script type="text/javascript" src="~/Scripts/CommonJs/js/jquery-3.0.0.min.js"></script>
    <script type="text/javascript" src="~/Scripts/CommonJs/js/shared.js"></script>
    <script>
        $(function () {
            initData();
            $('#lb_statusImage').click(function () {
                window.location.href = "/Home/StatusReminder"
            })
            CancelLogin();
        });
        function initData() {
            $.post("/Home/MainfrmAjax", null, function (returnData) {
                if (returnData.ReturnTypeStr == "Success") {
                    $('#loginName').html(returnData.Data.UserInfo.LoginName);
                    $('#lb_managerNum').html(returnData.Data.TypeNameSumStr);
                    $('#lb_user').html(returnData.Data.UserInfo.UserName);
                    $('#currentWeekSort').html(returnData.Data.UserInfo.CurrentWeekSort);
                    return false;
                }
                alert(returnData.WarnMessage);
            })
        }

        function CancelLogin() {
            $('#CancelLogin').click(function () {
                $.post("/Home/CancelLogin", null, function (data) {
                    window.location.href = "/Home/Index";
                })
            })
        }
    </script>
</head>

<body>
    <div class="container wholeLine">
        <div class="DefaultLine wholeLine" style="height:30px">
            <div class="fl Font_Color_w bold vertical-center">
                &nbsp;&nbsp;<label id="loginName"></label>
            </div>
            <div class="fr vertical-center"><a href="javascript:" id="CancelLogin" class="Font_Color_w bold ">注销  &nbsp;&nbsp;  </a></div>
        </div>
        <div class="" style="height:15px">

        </div>
        <div class="DefaultLine wholeLine" style="height:100px">
            <div class="fl" style="border:1px dotted #000;border-color:#999999; height:100px; width: 50%">
                <div class="vertical-center Font_Color_w" style="text-align: center;font-size: 40px"><label id="currentWeekSort"></label></div>
            </div>
            <div class="fl" style="border:1px dotted #000;border-color:#999999; height:100px; width:50%">
                <table style="height: 100%; width: 100%">
                    <tr style="height:20%">
                        <td></td>
                    </tr>
                    <tr>
                        <td>
                            <a href="RankType" style="color: red">点击进度排名</a>
                        </td>
                    </tr>
                    <tr>
                        <td class="Font_Color_w">
                            <label id="lb_managerNum"></label>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label id="lb_weeklyRanking" class="Font_Color_w">当前周排名</label>
                        </td>
                    </tr>
                    <tr style="height:20%">
                        <td></td>
                    </tr>
                </table>
            </div>

            <div class="" style="clear:both;width:100%; font-size:20px; height:40px; text-align: center">
                <label id="lb_user"></label> <a href="PersonalEdit">修改密码</a>
            </div>
            <div style="width:100%; height:200px; clear: both">
                <table style="width:100%; border: solid 1px #999999">
                    <tr class="colHeight">
                        <td style="text-align: center ">
                            <img class="vertical-center" onclick="SysLogin('Visit_Record_List')" src="/Images/sf_client_progress.jpg" style="width: 85px; height: 85px" />
                            <div id="lb_customerProgress" style=" height:14px;">用户跟进</div>
                        </td>
                        <td style="text-align: center; border: solid 1px #999999">
                            <img class="vertical-center" onclick="SysLogin('Visit_Record_Add')" src="/Images/sf_report.jpg" style="width: 85px; height: 85px" />
                            <div id="lb_report" style=" height:14px;">
                                开发汇报
                            </div>
                        </td>
                    </tr>
                    <tr class="colHeight">
                        <td style="text-align: center">
                            <img class="vertical-center" id="lb_statusImage" src="/Images/sf_status.jpg" style="width: 85px; height: 85px" />
                            <div id="lb_status" style=" height:14px;">
                                状态提醒
                            </div>
                        </td>
                        <td style="text-align: center; border: solid 1px #999999">
                            <img class="vertical-center" onclick="alert('本功能即将开放')" src="/Images/sf_extension.jpg" style="width: 85px; height: 85px" />
                            <div id="lb_new" style=" height:14px;">NEW</div>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <div class="alignment-center" style="margin-top:325px; left:10%; right:10%">
        <label>
            Industry development and management
        </label>
    </div>
</body>
</html>
