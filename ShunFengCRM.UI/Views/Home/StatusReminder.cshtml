    <script type="text/javascript">
        $(function () {
            initData();
        });
        function initData() {
            $.post("/Home/StatusReminderAjax", null, function (returnData) {
                if (returnData.ReturnTypeStr == "Success") {
                    $('#OneMonthNewSign').html(returnData.Data.OneMonthNewSign);
                    $('#OneMonthVisiCount').html(returnData.Data.OneMonthVisiCount);
                    $('#OneMonthVisitSort').html(returnData.Data.OneMonthVisitSort);
                    $('#TodayVisitCount').html(returnData.Data.TodayVisitCount);
                    $('#VisitReportRqCount').html(returnData.Data.VisitReportRqCount);
                    $('#VisitCount').html(returnData.Data.VisitCount);
                    if (returnData.Data.IsRed == true) {
                        $('#OneMonthVisitSort').css("color", "red");
                    }
                    return false;
                }
                alert(returnData.WarnMessage);
            })
        }
    </script>


